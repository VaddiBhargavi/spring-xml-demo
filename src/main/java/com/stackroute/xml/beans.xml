<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--Constructor based injection-->
<bean id="actor1" class="com.stackroute.domain.Actor">
    <constructor-arg index="0" type="java.lang.String" name="name" value="Bhargavi"  />
    <constructor-arg name="gender" value="female" />
    <constructor-arg name="age" value="22" />
</bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" type="java.lang.String" name="name" value="Vaddi" />
        <constructor-arg name="gender" value="female" />
        <constructor-arg name="age" value="23" />
    </bean>
    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" type="java.lang.String" name="name" value="Chinni" />
        <constructor-arg name="gender" value="female" />
        <constructor-arg name="age" value="24" />
    </bean>

    <!--Constructor based object injection-->
    <bean id="movie1" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor1" />
    </bean>
    <bean id="movie2" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor2" />
    </bean>
    <bean name="movie3,movie4" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor3" />
    </bean>
</beans>
